<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"  
     xsi:schemaLocation="http://www.springframework.org/schema/beans  
     http://www.springframework.org/schema/beans/spring-beans-2.5.xsd  
     http://www.springframework.org/schema/context  
     http://www.springframework.org/schema/context/spring-context-2.5.xsd" default-lazy-init="false">
     
     <bean id="jade.dataSource.universe_comment" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.sqlite.JDBC"/>
        <property name="url" value="jdbc:sqlite:target/test-db"/>
     </bean>
     
     <bean id="personJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
            <constructor-arg index="0" ref="jade.dataSource.universe_comment"/>
            <constructor-arg index="1" value="false"/>
     </bean>
        
</beans>
