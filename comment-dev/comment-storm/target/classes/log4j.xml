<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false"
  xmlns:log4j="http://jakarta.apache.org/log4j/">


  <appender name="com.renren.ugc.comment.file" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="/data/logs/test/test1.log" />
    <param name="MaxFileSize" value="200MB" />
    <param name="MaxBackupIndex" value="10" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %C{6} (%F:%L) - %m%n" />
    </layout>
  </appender>

  <appender name="com.renren.ugc.comment.console" class="org.apache.log4j.ConsoleAppender">
    <!--param name="Threshold" value="INFO" 为打印logger 去掉Threshold参数配置 / -->
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %C{6} (%F:%L) - %m%n" />
    </layout>
  </appender>

  <appender name="misc" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="/data/logs/test/test.log" />
    <param name="MaxFileSize" value="200MB" />
    <param name="MaxBackupIndex" value="10" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %C{6} (%F:%L) - %m%n" />
    </layout>
  </appender>

  <logger name="com.renren.ugc.comment" additivity="false">
    <level value="debug" />
    <appender-ref ref="com.renren.ugc.comment.file" />
    <appender-ref ref="com.renren.ugc.comment.console" />
  </logger>

  <root>
    <level value="INFO" />
    <appender-ref ref="misc" />
    <appender-ref ref="com.renren.ugc.comment.console" />
  </root>

</log4j:configuration>
    
