<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="commentCenterWebAPIAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/comment-web-api.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %C{6} (%F:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="tool.appender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/rose-tool.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss,SSS} %-5p %c(%F:%L) ## %m%n" />
        </layout>
    </appender>

	<logger name="com.renren.ugc.comment">
		<level value="error" />
		<appender-ref ref="commentCenterWebAPIAppender" />
	</logger>

<!-- open the below config to see the rose info -->
