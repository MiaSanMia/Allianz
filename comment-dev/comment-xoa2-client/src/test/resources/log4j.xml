<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <appender name="commentServiceFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="target/comment-xoa2-client.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss,SSS} %-5p %c(%F:%L) ## %m%n"/>
        </layout>
    </appender>
    
    <appender name="commentServiceConsoleAppender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss,SSS} %-5p %c(%F:%L) ## %m%n" />
        </layout>
    </appender>
    
    <logger name="com.renren.ugc.comment" additivity="false">  
        <level value="info" />
        <appender-ref ref="commentServiceConsoleAppender"/>
        <appender-ref ref="commentServiceFileAppender"/>
    </logger>  
    
    <root>
        <level value="warn" />
        <appender-ref ref="commentServiceConsoleAppender"/>
        <appender-ref ref="commentServiceFileAppender"/>
    </root>
    
</log4j:configuration>
