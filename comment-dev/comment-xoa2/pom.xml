        </dependency>
        <dependency>
            <groupId>com.renren</groupId>
            <artifactId>xoa2-serverlib</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>javax.servlet</groupId>
