         xiaonei-root-pom -->
        <dependency>
  			<groupId>mysql</groupId>
 			<artifactId>mysql-connector-java</artifactId>
  			<version>5.1.26</version>
  			<scope>runtime</scope>
		</dependency>
		
		<dependency>
            <groupId>com.renren.dp</groupId>
            <artifactId>xlog-client</artifactId>
            <version>1.1.3-SNAPSHOT</version>
            <exclusions>
				<exclusion>
					<groupId>ch.qos.logback</groupId>
  					<artifactId>logback-classic</artifactId>
				</exclusion>
			</exclusions>
        </dependency>
        
        <dependency>
			<groupId>com.xiaonei</groupId>
			<artifactId>xiaonei-core</artifactId>
			<exclusions>
				<exclusion>
					<groupId>com.google.protobuf</groupId>
					<artifactId>protobuf-java</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	<dependency>
		<groupId>com.renren</groupId>
		<artifactId>pillar-appender</artifactId>
		<version>1.0-SNAPSHOT</version>
	</dependency>
    
            <!-- 解决xoa1编码问题，强制依赖1.9.9 -->
